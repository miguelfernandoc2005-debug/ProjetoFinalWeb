@{
    ViewData["Title"] = "Dashboard (Admin)";
    var porTipoUsuario = ViewBag.PorTipoUsuario as System.Collections.Generic.Dictionary<string, int> ?? new();
    var ultimos = ViewBag.Ultimos as System.Collections.Generic.List<ProjetoFinal.Web.Areas.Admin.Services.UltimoCursoItem> ?? new();
}

@{
    Layout = "_Layout";
}

<h2 class="mb-3">Dashboard — Admin</h2>

<div class="row g-3">
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="text-secondary small">Total de cursos</div>
                <div class="display-6">@ViewBag.TotalCursos</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="text-secondary small">Total de matérias</div>
                <div class="display-6">@ViewBag.TotalMaterias</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="text-secondary small">Total de usuários</div>
                <div class="display-6">@ViewBag.TotalUsuarios</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="text-secondary small">Usuários por tipo</div>
                @foreach (var kv in porTipoUsuario)
                {
                    <div class="d-flex justify-content-between">
                        <span>@kv.Key</span>
                        <span class="fw-bold">@kv.Value</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">Cursos por matéria</h5>
                <canvas id="chartMateria"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">Cursos por tipo</h5>
                <canvas id="chartTipoCurso"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- 🔹 Linha final corrigida -->
<div class="row g-4 mt-1">
    <!-- Div lateral esquerda -->
    <div class="col-lg-4">
        <div class="card h-100 border border-dark">
            <div class="card-body d-flex align-items-center justify-content-center text-secondary">
                <i class="bi bi-bag text-primary me-2" style="font-size: 1.5rem;"></i>
            </div>
        </div>
    </div>

    <!-- Centralizado: 5 últimos cursos -->
    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title mb-3 text-center">5 últimos cursos</h5>
                <ol class="mb-0">
                    @foreach (var c in ultimos)
                    {
                        <li class="mb-2">
                            <div class="fw-bold">@c.Nome</div>
                            <div class="text-secondary small">@c.Materia · @c.TipoCurso · @c.DataDeCriacao.Year · @c.CargaHoraria h</div>
                        </li>
                    }
                </ol>
            </div>
        </div>
    </div>

    <!-- Div lateral direita -->
    <div class="col-lg-4">
        <div class="card h-100 border border-dark">
            <div class="card-body d-flex align-items-center justify-content-center text-secondary">
                <i class="bi bi-bag text-primary me-2" style="font-size: 1.5rem;"></i>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
}
