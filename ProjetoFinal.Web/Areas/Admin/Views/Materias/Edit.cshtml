@model ProjetoFinal.Domain.Entities.Materia

@{
    ViewData["Title"] = "Editar Matéria";
}

<link href="~/css/EditGlobal.css" rel="stylesheet" />

<!-- Quadrados decorativos grandes -->
<div class="bg-square big sq1"></div>
<div class="bg-square big sq2"></div>
<div class="bg-square big sq3"></div>
<div class="bg-square mid sq4"></div>
<div class="bg-square mid sq5"></div>

<div class="form-wrapper">

    <h2 class="mb-4 fw-bold text-center" style="font-family: 'Montserrat', sans-serif;">
        Editar Matéria
    </h2>

    <div class="form-card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- Campo Nome -->
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold">Nome da Matéria</label>
                    <input asp-for="Nome" class="form-control rounded-3" placeholder="Digite o nome atualizado..." />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <!-- Cursos relacionados -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Cursos relacionados</label>

                    @if (Model.Cursos != null && Model.Cursos.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var curso in Model.Cursos)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @curso.Nome
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">Nenhum curso associado a esta matéria.</p>
                    }
                </div>

                <!-- Metadados -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Informações adicionais</label>
                    <div class="alert alert-light border rounded-3">
                        <p class="text-muted">Última atualização: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>

                <!-- Botões -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-dark">
                        <i class="bi bi-save me-1"></i> Salvar alterações
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>

            </form>

        </div>
    </div>

</div>
