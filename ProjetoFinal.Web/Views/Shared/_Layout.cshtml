<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Kasper</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

</head>
<body>
    <div class="container">
        <!-- ===== NAVBAR DESKTOP ===== -->
        <nav class="navbar bg-white d-none d-lg-flex flex-column  p-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="home" class="text-decoration-none text-dark">
                    <div class="logo" style="font-family: 'Montserrat', sans-serif; font-weight: 700; font-size: 1.8rem;">
                        <span style="font-size: 2.2rem;">K</span>asper
                    </div>
                </a>

                <div class="d-flex align-items-center">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        bool isAdmin = User.IsInRole("Admin");
                        bool isDocente = User.IsInRole("Docente");

                        if (isAdmin)
                        {
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-dark me-2">
                                <i class="bi bi-speedometer2 me-1"></i> Dashboard
                            </a>
                        }

                        if (isAdmin || isDocente)
                        {
                            <a asp-area="Admin" asp-controller="Manage" asp-action="Index" class="btn btn-outline-dark me-2">
                                <i class="bi bi-gear-fill me-1"></i> Gestão
                            </a>
                        }

                        <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-danger" type="submit">
                                Sair (@User.Identity!.Name)
                            </button>
                        </form>
                    }
                    else
                    {
                        <a href="/Auth/Login" class="btn btn-danger d-flex align-items-center px-3 py-2">
                            <i class="bi bi-person-fill me-2"></i> Login
                        </a>
                    }
                </div>
            </div>

            <div class="container-fluid d-flex justify-content-center mt-2">
                <ul class="nav" style="font-family: 'Montserrat', sans-serif; font-weight: 700; font-size: 1rem;">
                    <li class="nav-item mx-4">
                        <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="home"
                           class="nav-link text-danger px-3 py-2" style="font-family: 'Montserrat', sans-serif; font-weight: 700;">
                            Home
                        </a>

                    </li>
                    <li class="nav-item mx-4">
                        <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="about"
                           class="nav-link text-danger px-3 py-2" style="font-family: 'Montserrat', sans-serif; font-weight: 700;">
                            Sobre
                        </a>
                    </li>
                    <li class="nav-item mx-4">
                        <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="catalog"
                           class="nav-link text-danger px-3 py-2" style="font-family: 'Montserrat', sans-serif; font-weight: 700;">
                            Catálogo
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- ===== NAVBAR MOBILE ===== -->
        <nav class="navbar bg-white d-lg-none p-3">
            <div class="container-fluid d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <button id="btnHamburgerMobile" class="btn p-0 me-3" style="border:none; background:none;">
                        <i class="bi bi-list fs-3"></i>
                    </button>
                </div>

                <a href="#/home" class="text-decoration-none text-dark mx-auto">
                    <div class="logo text-center" style="font-family: 'Montserrat', sans-serif; font-weight: 700; font-size: 1.8rem;">
                        <span style="font-size: 2.2rem;">K</span>asper
                    </div>
                </a>
            </div>

            <div id="hamburgerMenuMobile" class="position-fixed top-0 start-0 w-100 h-100 bg-white d-none"
                 style="z-index:1050; overflow-y:auto; opacity:0; transform: translateY(-20px); transition: all 0.4s ease;">
                <div class="d-flex flex-column align-items-center text-center pt-4">
                    <button type="button" id="closeHamburgerMobile"
                            class="btn border-0 bg-transparent fs-3 align-self-end me-4 mb-3">
                        <i class="bi bi-x-lg"></i>
                    </button>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="d-flex flex-column align-items-center text-decoration-none text-dark mb-4">
                            @Html.AntiForgeryToken()

                            <button type="submit" class="btn p-0 border-0 bg-transparent d-flex flex-column align-items-center text-dark">
                                <div class="rounded-circle d-flex justify-content-center align-items-center bg-light shadow-sm"
                                     style="width: 80px; height: 80px;">
                                    <i class="bi bi-box-arrow-right fs-1"></i>
                                </div>
                                <span class="mt-2 fw-bold" style="font-family: 'Montserrat', sans-serif;">
                                    Sair (@User.Identity!.Name)
                                </span>
                            </button>
                        </form>

                    }
                    else
                    {
                        <a href="/Auth/Login" class="d-flex flex-column align-items-center text-decoration-none text-dark mb-4">
                            <div class="rounded-circle d-flex justify-content-center align-items-center bg-light shadow-sm"
                                 style="width: 80px; height: 80px;">
                                <i class="bi bi-person-fill fs-1"></i>
                            </div>
                            <span class="mt-2 fw-bold" style="font-family: 'Montserrat', sans-serif;">Login</span>
                        </a>
                    }

                    <div class="w-100 px-4" style="max-width: 400px; font-family: 'Montserrat', sans-serif; font-weight: 700;">
                        <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="home"
                           class="nav-link text-danger px-3 py-2" style="font-family: 'Montserrat', sans-serif; font-weight: 700;">
                            <i class="bi bi-house-door-fill me-3 fs-5"></i> Home
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="about"
                           class="nav-link text-danger px-3 py-2" style="font-family: 'Montserrat', sans-serif; font-weight: 700;">
                            <i class="bi bi-collection-fill me-3 fs-5"></i> Sobre
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="catalog"
                           class="nav-link text-danger px-3 py-2" style="font-family: 'Montserrat', sans-serif; font-weight: 700;">
                            <i class="bi bi-tags-fill me-3 fs-5"></i>  Catálogo
                        </a>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            bool isAdmin = User.IsInRole("Admin");
                            bool isDocente = User.IsInRole("Docente");

                            if (isAdmin)
                            {
                                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                                   class="nav-link text-danger px-3 py-2" style="font-family: 'Montserrat', sans-serif; font-weight: 700;">
                                    <i class="bi bi-speedometer2 me-3 fs-5"></i> Dashboard
                                </a>
                            }

                            if (isAdmin || isDocente)
                            {
                                <a asp-area="Admin" asp-controller="Manage" asp-action="Index"
                                   class="nav-link text-danger px-3 py-2" style="font-family: 'Montserrat', sans-serif; font-weight: 700;">
                                    <i class="bi bi-gear-fill me-3 fs-5"></i> Gestão
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js//_Layout.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>



